<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hu.tyler.dontdinealone.EditProfile"
    tools:layout_editor_absoluteY="81dp">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="111dp"
        android:layout_height="0dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/scrollView3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginBottom="20dp"
                android:background="#FF9900"
                android:fontFamily="casual"
                android:text="Avatar :"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


            <ImageView
                android:id="@+id/ava1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:adjustViewBounds="true"
                android:background="@color/colorAccent"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/a1" />


            <ImageView
                android:id="@+id/ava2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:adjustViewBounds="true"
                android:background="@color/fui_transparent"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/a2" />

            <ImageView
                android:id="@+id/ava3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:adjustViewBounds="true"
                android:background="@color/fui_transparent"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/a3" />

            <ImageView
                android:id="@+id/ava4"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:adjustViewBounds="true"
                android:background="@color/fui_transparent"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/a6" />

            <ImageView
                android:id="@+id/ava5"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:adjustViewBounds="true"
                android:background="@color/fui_transparent"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/a4" />

            <ImageView
                android:id="@+id/ava6"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:adjustViewBounds="true"
                android:background="@color/fui_transparent"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/a5" />

            <ImageView
                android:id="@+id/ava7"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:adjustViewBounds="true"
                android:background="@color/fui_transparent"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/a7" />

            <ImageView
                android:id="@+id/ava8"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:adjustViewBounds="true"
                android:background="@color/fui_transparent"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/a8" />

        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="297dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/scrollView2"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="104dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="#FF9900"
                android:fontFamily="casual"
                android:text="Display Name:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:layout_editor_absoluteX="122dp"
                tools:layout_editor_absoluteY="42dp" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="262dp"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="Patrick Star"
                android:inputType="textPersonName" />


            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="#FF9900"
                android:fontFamily="casual"
                android:text="Gender:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:layout_editor_absoluteX="122dp"
                tools:layout_editor_absoluteY="160dp" />

            <EditText
                android:id="@+id/editTextGender"
                android:layout_width="262dp"
                android:layout_height="42dp"
                android:ems="10"
                android:hint="Male,Female,etc."
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="122dp"
                tools:layout_editor_absoluteY="199dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginTop="40dp"
                android:background="#FF9900"
                android:fontFamily="casual"
                android:text="Spirit Animal:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                tools:layout_editor_absoluteX="122dp"
                tools:layout_editor_absoluteY="276dp" />

            <EditText
                android:id="@+id/editTextAnimal"
                android:layout_width="262dp"
                android:layout_height="45dp"
                android:ems="10"
                android:hint="Donkey, Monkey, Slug, etc."
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="122dp"
                tools:layout_editor_absoluteY="313dp" />

            <LinearLayout
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp">

                <Button
                    android:id="@+id/editOk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#FF9900"
                    android:fontFamily="casual"
                    android:text="OK"
                    android:textColor="#FFF"
                    tools:layout_editor_absoluteX="296dp"
                    tools:layout_editor_absoluteY="521dp" />

                <Button
                    android:id="@+id/editCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="90dp"
                    android:background="#FF9900"
                    android:fontFamily="casual"
                    android:text="cancel"
                    android:textColor="#FFF"
                    tools:layout_editor_absoluteX="149dp"
                    tools:layout_editor_absoluteY="521dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
